<%= form_for(portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="btn btn-primary">Upload Main Image 
            <%= f.file_field :main_image, style: "display:none;" %>
          </label>  
        </div>
        <div class="form-group">
          <label class="btn btn-primary">Upload Thumb Image 
            <%= f.file_field :thumb_image, style: "display:none;" %>
          </label>
        </div>
    </div> 
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 15 %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-12">
      <h3>Technologies Used : </h3>
      <div>
          <%= f.fields_for :technologies do |technology_form|%>
            <%= render 'technology_fields', f: technology_form %>
          <% end %>
      </div>
      <div>
        <%= link_to_add_association "Add New Technology", f, :technologies %>
      </div>


      <div class="form-group">
        <%= f.submit "Save Portfolio", class: "btn btn-primary" %>
      </div>
    </div>
  </div>  
<% end %>