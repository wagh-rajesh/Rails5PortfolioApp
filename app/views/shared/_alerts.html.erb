<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Rajesh's Portfolio", sticky: false, time: 4000) %>
<% elsif flash[:error] %>	
	<%= js add_gritter(flash[:error], title: "Rajesh's Portfolio", sticky: false, time: 4000) %>
<% else %>		
	<%= js add_gritter(flash[:notice], title: "Rajesh's Portfolio", sticky: false, time: 4000) %>
<% end %>