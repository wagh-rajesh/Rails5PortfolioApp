<div class="app-card-container">
	<div class="card">
		<h1>About me</h1>
		<hr>
		<div class="row">
			<div class="col-md-4">
				<%= image_tag "my-image.png", width: 250, alt: "Profile Image", class: "profile-img" %>
				<div class="skills">
					<% @skills.each do |skill| %>
						<div class="skill">
							<h4><%= skill.title %></h4>
							<div class="progress">
								<div 
									class="progress-bar progress-bar-striped bg-success"
									role="progressbar"
									aria-valuenow="<%= skill.percent_utilized %>"
									aria-valuemax="100"
									style="width: <%= skill.percent_utilized %>%"
								></div>
							</div>
						</div>	
					<% end %>
				</div>
			</div>
			<div class="col-md-8">
