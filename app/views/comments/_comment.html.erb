<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row comment-content-div">
				<div class="col-sm-2">
					<%= gravatar_helper(comment.user) %>	
				</div>
				<div class="col-sm-10">
					<div>
						<%= comment.content%>		
					</div>
					<div class="comment-attribution">
						Posted by <span class="comment-user-name"><%= comment.user.name %></span>
						<%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
					</div>
				</div>
			</div>
		</div>
	</div>		
</div>